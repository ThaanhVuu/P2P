<?xml version="1.0" encoding="UTF-8"?>

<!--suppress JavaFxUnresolvedStyleClassReference -->
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXPasswordField?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="dhkthn.p2p.controller.SignUpController"
           styleClass="bg-light"
           stylesheets="@css/TextFields.css"
>
    <VBox alignment="CENTER" spacing="30" maxWidth="450" maxHeight="550"
          styleClass="bg-white, border, border-primary, rounded, shadow"
    >
        <padding>
            <Insets top="50" right="50" bottom="50" left="50"/>
        </padding>

        <!-- Header-->
        <VBox alignment="CENTER" spacing="10">
            <Label text="Register" styleClass="h2, text-primary, fw-bold"/>
            <Label text="Welcome back!" styleClass="text-muted"/>
        </VBox>
        <!-- Form Fields -->
        <VBox spacing="20">
            <MFXTextField fx:id="usernameField"
                          styleClass="validatedField"
                          floatMode="BORDER"
                          floatingText="Username"
                          prefWidth="400"
                          prefHeight="45"
            />
            <MFXPasswordField fx:id="passwordField"
                              styleClass="validatedField"
                              floatMode="BORDER"
                              floatingText="Password"
                              prefHeight="45"
                              prefWidth="400"
            />
            <MFXPasswordField fx:id="passwordField2"
                              styleClass="validatedField"
                              floatMode="BORDER"
                              floatingText="Password"
                              prefHeight="45"
                              prefWidth="400"
            />
        </VBox>

        <VBox spacing="15">
            <MFXButton
                    text="Sign up"
                    onAction="#handleSignUpBtn"
                    prefWidth="350"
                    prefHeight="45"
                    styleClass="outline-button"
                    style="-fx-background-color: #2b77ba; -fx-text-fill: white"
            />

            <HBox alignment="CENTER" spacing="5">
                <Label text="You already have an account?" styleClass="text-muted"/>
                <Label text="Sign in now"
                       onMouseClicked="#handleSignInClicked"
                       styleClass="text-primary, fw-bold, cursor-pointer"
                />
            </HBox>
        </VBox>

    </VBox>
</StackPane>
